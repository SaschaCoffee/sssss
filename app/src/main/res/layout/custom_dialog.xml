<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/et_sets"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_below="@+id/tv_updown"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/tv_reps_third"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:ems="10"
                android:hint="Repetitions: 0"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_upload_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+"
                app:layout_constraintEnd_toStartOf="@+id/tv_reps_third"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="btn_addtoTV"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="61dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_marginTop="-8dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/et_symbol_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="51dp"
            android:layout_toEndOf="@+id/imageButton"
            android:ems="10"
            android:hint="Repetitions (First Set)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_symbol_reps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_symbol_reps"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="51dp"
            android:layout_toEndOf="@+id/imageButton"
            android:ems="10"
            android:hint="Repetitions (Second Set)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_symbol_reps3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_symbol_reps2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="51dp"
            android:layout_toEndOf="@+id/imageButton"
            android:ems="10"
            android:hint="Repetitions (Third Set)"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_updown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_symbol_reps3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="51dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="53dp"
            android:text="You can use your Volume Up/Down to increase/decrease repetitions"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>